<!DOCTYPE html>
<html lang="en">
  <% include ../head %>
  <body>
    <% var active = "launchpads"; %>
    <% include ../nav %>
    <!-- Tab views -->
    <div class="tab-view">
      <div id="launchpads">
		<h2>Edit a launch pad</h2>
		<ul class="results">
		<li id=edit class="result">
		<!-- 'id', 'full_name', 'details', 'status', 'location' -->
		  <form class="form" action="/launchpads/<%= launchpad.id %>?_method=<%= method %>" method="post">   
			<p>
				<label>Name:</label>
				<input id="full_name" type="text" placeholder="Enter launchpad name" name="full_name" value="<%= launchpad.full_name %>">
			</p>
			<p>
			    <label>Details:</label>
				<input id="details" type="text"  placeholder="Enter details of the launchpad" name="details" value="<%= launchpad.details %>">
			</p>
			<p>
				<label>Status:</label>
				<input id="status" type="text" placeholder="Enter whether this launchpad is in use" name="status" value="<%= launchpad.status %>">
			</p>
			<h2>Location</h2>
			<p>
				<label>Location Name:</label>
				<input id="name" type="text" placeholder="Enter the name of the launch location" name="name" value="<%= launchpad.location.name %>">
			</p>
			<p>
				<label>Region:</label>
				<input id="region" type="text" placeholder="Enter the region of the launch" name="region" value="<%= launchpad.location.region %>">
			</p>
			<input type="submit" value="Submit" class="btn btn-default">
		  </form>
		 </li>
		</ul>
      </div>
    </div>
    <% include ../footer %>
    <% include ../script %>
  </body>