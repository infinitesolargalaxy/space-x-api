<!DOCTYPE html>
<html lang="en">
  <% include ../head %>
  <body>
    <% var active = "vehicles"; %>
    <% include ../nav %>
    <!-- Tab views -->
    <div class="tab-view">
      <div id="vehicles">
	    <% if (isLoggedIn) { %>
			<td>
				<a href="/vehicles/edit" class="btn btn-default">Add New Vehicle</a>
			</td>
		<% } %>
        <h2><%= title %></h2>
        <ul class="results">
          <% data.forEach((elem, i) => { %>
            <li id=<%= elem.id %> class="result">
			<!-- Only let logged in users edit and delete -->
			<% if (isLoggedIn) { %>
			  <td>
				<a href="/vehicles/edit/<%= elem.id %>" class="btn btn-default">Edit</a>
			  </td>
			  <td>
                <form action="/vehicles/<%= elem.id %>?_method=DELETE" method="POST">
                  <button class="btn btn-default">Delete</button>
                </form>
			  </td>
			<% } %>
			
			
              <h3><%= elem.name %></h3>
              <p><%= elem.description %></p>
              <ul>
                <li>Active: <%= printProperty(elem, 'active', '', '') %></li>
                <li>First Flight: <%= printProperty(elem, 'first_flight', '', '') %></li>
                <li>Cost Per Launch: <%= printProperty(elem, 'cost_per_launch', '$', '') %></li>
                <li>Success Rate: <%= printProperty(elem, 'success_rate_pct', '', '%') %></li>
              </ul>
              <p><a href=<%= "/launches?vehicle=" + elem.id %>>Launches</a></p>
            </li>
          <% }); %>
        </ul>
      </div>
    </div>
    <% include ../footer %>
    <% include ../script %>
  </body>
</html>
